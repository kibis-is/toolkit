    "vite-plugin-dts": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "algosdk": "^3.x"
  },
  "dependencies": {
    "@kibisis/chains": "workspace:",
    "@kibisis/utilities": "workspace:",
